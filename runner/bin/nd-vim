#!/bin/bash
#
# Nora Docker
#
#
#
cd $(dirname $0)/..;
source ./config/vars

NAME=$1
shift;

[ "$NAME" == "" ] && exit 1

for file in $PATH_LIST
do
    [ "$NAME" == "$(basename $file)" ] && {
        INS=$($file name)
        VIM_INS="${INS}-VIM"

        docker create -v /root/vim.d --name vim.data busybox 2> /dev/null

        docker run --rm -it --volumes-from $INS --volumes-from vim.data -e HOME=/root service/vim $*
    }
done
